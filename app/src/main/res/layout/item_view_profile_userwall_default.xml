<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:clickable="false" android:focusable="false"
    android:layout_height="@dimen/image_height_listview" android:background="@color/colorUsername">
    <TextView
        android:id="@+id/option_profile_userwall_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:text="@string/app_name"/>
    <vn.nguyen.andrew.appchat.textview.UnderlinedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/value_profile_userwall_default"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:underlineColor="@color/colorUnderline"
        android:text="@string/app_name"/>
</RelativeLayout>